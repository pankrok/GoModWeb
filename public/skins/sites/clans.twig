
{% extends 'main.twig' %}
{% block content %}

<div class="col-9 col-s-9">
	{% if clans is empty %}
	<div class="box mx-auto p-4">
		<b>Na razie nie ma klan√≥w na tym serwrze.</b>
	</div>
	{% else %}
    <div class="box mx-auto p-4">
		{% for clan in clans %}
		<a href="{{base_url}}/clan/{{clan.id}}">{{ clan.name }}</a>
		<hr>
		{% endfor %}
	</div>
		{% if paginator %}
		<br />
		<div class="box mx-auto p-4">
		 <!-- paginatpr -->
			 <a href="{{ base_url }}/clans/{{ paginator.f }}"><button class="btn" name="page" type="button" value="{{ paginator.f }}">First</button></a>
			 {% for page in paginator.p %}
			 <a href="{{ base_url }}/clans/{{ page }}"><button class="btn" name="page" type="button" value="{{ page }}" {% if page == paginator.c %} disabled {% endif %}>{{ page }}</button></a>
			 {% endfor %}
			 <a href="{{ base_url }}/clans/{{ paginator.l }}"><button class="btn" name="page" type="button" value="{{ paginator.l }}">Last</button></a>
		</div>
		{% endif %}
	{% endif %}
</div>

{% endblock %}