
{% extends 'main.twig' %}
{% block content %}

<div class="col-9 col-s-9">
 <div class="box mx-auto p-4">
	<div class="row">
	<div class="col-12">
	 <form method="post" action="{{ base_url }}/players">
		<p>Szukaj po nicku:</p>
		<div class="row">
			<div class="col-9">
				<input type="text" name="find" value="" placeholder="Wpisz nick gracza">
			</div>
			<div class="col-3">
				<input class="btn" type="submit" value="Submit">
			</div>
		</div>
	 </form>
	 </div>
	 </div>
 </div>
    <div class="box mx-auto p-4">
	<div class="row">
	<div class="col-12">
		{% for b in players %}
		<a href="{{base_url}}/player/{{b.id}}">{{ b.name }}</a>
		<hr>
	{% endfor %}
	</div>
	</div>
	</div>
	{% if paginator %}
	<br />
	 <div class="box mx-auto p-4">
	 <div class="row">
	<div class="col-12">
	 <!-- paginatpr -->
		<form class="mx-auto" action="#" method="post" style="max-width 500px;">
		 <button class="btn" name="page" type="submit" value="{{ paginator.f }}">First</button>
		 {% for page in paginator.p %}
		  <button class="btn" name="page" type="submit" value="{{ page }}" {% if page == paginator.c %} disabled {% endif %}>{{ page }}</button>
		 {% endfor %}
		 <button class="btn" name="page" type="submit" value="{{ paginator.l }}">Last</button>
		</form>
	 </div>
	 </div>
	</div>
	{% endif %}
  </div>

{% endblock %}